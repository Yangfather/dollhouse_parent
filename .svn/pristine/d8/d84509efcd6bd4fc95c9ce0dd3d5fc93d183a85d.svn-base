.login {
  width: 100%;
  height: 600px;
  background: url(../img/login.png) no-repeat center;
  background-size: 100% 100%;
  position: relative;
}
.login .login-box {
  width: 450px;
  height: 290px;
  position: absolute;
  left: 50%;
  top: 180px;
  margin-left: -225px;
  background-color: #fff;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  border-radius: 10px;
}
.login .login-box .login-cont {
  width: 270px;
  margin: 50px auto;
}
.login .login-box .login-item {
  margin: 15px 0;
  font-size: 0px;
  letter-spacing: -5em;
}
.login .login-box .login-item label {
  font-size: 12px;
  letter-spacing: 0px;
}
.login .login-box .login-item label.login-label {
  display: inline-block;
  width: 36px;
  height: 36px;
  line-height: 36px;
  border: 1px solid #e2e2e2;
  border-right-color: transparent;
  text-align: center;
  -moz-border-radius: 3px 0 0 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px 0 0 3px;
  font-size: 12px;
  letter-spacing: 0px;
  vertical-align: middle;
}
.login .login-box .login-item label.login-label i {
  width: 34px;
  height: 34px;
  margin: 1px 0;
  border-right: 1px solid #e2e2e2;
  display: block;
  background-image: url(../img/login-icon.jpg);
  background-repeat: no-repeat;
}
.login .login-box .login-item label.login-label .user {
  background-position: center 5px;
}
.login .login-box .login-item label.login-label .pwd {
  background-position: center -33px;
}
.login .login-box .login-item input.login-input {
  width: 214px;
  height: 20px;
  padding: 8px;
  font-size: 14px;
  color: #333;
  border: 1px solid #e2e2e2;
  border-left-color: transparent;
  -moz-border-radius: 0 3px 3px 0;
  -webkit-border-radius: 0;
  border-radius: 0 3px 3px 0;
  vertical-align: middle;
  font-size: 12px;
  letter-spacing: 0px;
}
.login .login-box .login-item .login-btn {
  border: none;
  width: 270px;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  text-align: center;
  color: #fff;
  cursor: pointer;
  background-color: #0697da;
  -moz-border-radius: 20px;
  -webkit-border-radius: 20px;
  border-radius: 20px;
}
.login .login-box .login-item .login-btn:hover {
  background-color: #057bb2;
}
.login .copyright {
  text-align: center;
  position: absolute;
  bottom: 35px;
  width: 100%;
}
